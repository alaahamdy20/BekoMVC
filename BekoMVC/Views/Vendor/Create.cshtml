					</div>
					<div class="form-group">
						<label asp-for="BankAccNo" class="control-label"></label>
						<input asp-for="BankAccNo" class="form-control" />
						<span asp-validation-for="BankAccNo" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="AdminUsername" class="control-label"></label>
						<select asp-for="AdminUsername" class="form-control" asp-items="ViewBag.AdminUsername"></select>
					</div>
					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-primary" />
					</div>
				</form>
			</div>
		</div>

		<div>
			<a asp-action="Index">Back to List</a>
		</div>

	</div>
</section>
